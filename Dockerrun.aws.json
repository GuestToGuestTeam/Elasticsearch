{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
    {
        "name": "elasticsearch",
        "host": {
            "sourcePath": "/var/app/elastic"
        }
    }
    ],
    "containerDefinitions": [
    {
        "name": "gtg-elasticsearch",
        "image": "guesttoguest/elasticsearch:latest",
        "memory": 1024,
        "portMappings": [
        {
            "hostPort": "9200",
            "containerPort": "9300"
        },
        {
            "hostPort": "9200",
            "containerPort": "9300"
        }
        ],
        "essential": true,
        "mountPoints": [
        {
            "sourceVolume": "elastic-db",
            "containerPath": "/data",
            "readOnly": true
        }
        ]
    }
    ]
}
